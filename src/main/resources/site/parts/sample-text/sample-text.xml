<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Sample text</display-name>
    <form>
        <input name="numOfWords" type="TextLine">
            <label>Number of words (count)</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <regexp>^[0-9]*$</regexp>
            </config>
            <default>10</default>
        </input>
    </form>
</part>